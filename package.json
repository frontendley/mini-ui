{
  "name": "mini-ui",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "eslint": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "stylelint": "stylelint \"**/*.{css,less}\"",
    "lint": "pnpm eslint && pnpm stylelint",
    "prepare": "husky",
    "commit": "git-cz",
    "dev:ui": "pnpm --filter=ui run dev",
    "docs": "pnpm --filter=website run dev",
    "dev": "pnpm -r --parallel --filter=ui --filter=website run dev"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,less}": [
      "stylelint --fix"
    ]
  },
  "keywords": [],
  "author": "frontendley",
  "license": "ISC",
  "devDependencies": {
    "eslint": "9.10.0",
    "@eslint/js": "9.10.0",
    "typescript-eslint": "8.6.0",
    "stylelint": "16.9.0",
    "stylelint-config-standard": "36.0.1",
    "postcss-less": "6.0.0",
    "stylelint-less": "3.0.1",
    "husky": "9.1.6",
    "commitizen": "4.3.0",
    "cz-git": "1.9.4",
    "commitlint": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "lint-staged": "15.2.10",
    "typescript": "5.6.2"
  }
}
